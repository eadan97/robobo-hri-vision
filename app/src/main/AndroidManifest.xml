<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mytechia.robobo.framework.vision">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Calibration settings -->
        <activity
            android:name=".TagCalibrationSettingsActivity"
            android:label="@string/title_activity_tag_calibration_settings"
            android:parentActivityName=".TagCalibrationActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mytechia.robobo.framework.vision.TagCalibrationActivity" />
        </activity>

        <!-- Main settings -->
        <activity android:name=".TagCalibrationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>